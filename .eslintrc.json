{
    "root": true,
    "extends": ["semistandard", "eslint:recommended", "plugin:react/recommended", "prettier"],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "globals": { "webkitSpeechRecognition": false },
    "ignorePatterns": [
      ".next",
      "*.wasm.js",
      "**/*/draco",
      "public/*",
      "packages/CubismWebFramework",
      "packages/zine/lib/draco",
      "packages/pixi-live2d-display",
      "**/*/physics-wasm",
      "**/*/pg.module.js",
      "**/*/pg.js",
      "**/*/pg.worker.js",
      "**/*/dc.js",
      "**/*/dc.module.js",
      "**/*/avatars-wasm.js",
      "**/*/sm-parse.js",
      "packages/gen/public",
      "**/*/basis",
      "packages/engine/gifuct-js.js",
      "packages/engine/gif.worker.js",
      "packages/engine/bin",
      "*/sm-parse.js",
      "packages/three",
      "packages/engine/hdkey.js",
      "packages/troika-three-text",
      "packages/engine/audio/bin",
      "packages/engine/bin/app-wasm-worker.js",
      "packages/engine/bin/engine-wasm-worker.js",
      "packages/engine/bin/geometry.js",
      "packages/engine/bin/geometry.worker.js",
      "packages/engine/bin/pg.js",
      "packages/engine/bin/pg.module.js",
      "packages/three-vrm",
      "packages/ui-kit",
      "packages/zine/third_party",
      "packages/engine/bin/pg.js",
      "packages/engine/bin/geometry.worker.js",
      "packages/engine/bin/geometry.js",
      "packages/engine/bin/engine-wasm-worker.js",
      "packages/engine/bin/app-wasm-worker.js",
      "packages/engine/audio/bin",
      "packages/engine/VOXLoader.js",
      "steam_build.js",
      "vite.config.js",
      "node_modules",
      "node_modules/*"
    ],
    "rules": {
      "react/prop-types": "off",
      "camelcase": "off",
      "no-tabs": "off",
      "no-debugger": "off",
      "prefer-regex-literals": "off",
      "promise/param-names": "off",
      "prefer-const": "off",
      "no-prototype-builtins": "off",
      "react/display-name": "off",
      "no-lone-blocks": "off",
      "eol-last": ["error", "never"],
      "no-unused-vars": ["off"],
      "no-unreachable": ["off"],
      // disable end of line comma
      "comma-dangle": ["off"],
      "lines-between-class-members": ["off"],
      "no-useless-constructor": "off",
      "object-curly-spacing": ["off"],
      "linebreak-style": 0,
      "no-inner-declarations": ["off"],
      "no-case-declarations": ["off"],
      "no-return-assign": ["off"],
      "eqeqeq": ["off"],
      "no-labels": ["off"],
      "no-cond-assign": ["off"],
      "new-cap": ["off"],
      "no-useless-escape": ["off"],
      "react/no-unescaped-entities": ["off"],
      "space-in-parens": ["error", "never"],
      "arrow-parens": ["off"],
      "no-void": ["off"],
      "react/react-in-jsx-scope": ["off"],
      "number-literal-case": "off",
      "no-proto": "off",
      "no-self-compare": "off",
      "no-func-assign": "off",
      "no-array-constructor": "off",
      "no-undef": ["off"],
      "no-throw-literal": ["off"],
      "no-unused-expressions": ["off"],
      "no-sequences": ["off"],
      "no-useless-call": ["off"],
      "no-redeclare": ["off"]
    },
    "env": {
      "browser": true,
      "es2021": true,
      "jest": true
    }
  }